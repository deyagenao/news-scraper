{{!-- nav bar --}}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Real News Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/saved">Saved Articles</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-info text-white scrape-new mr-2">Scrape New Articles</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-info text-white clear">Clear Articles</a>
            </li>
        </ul>
    </div>
</nav>

<div class="jumbotron text-center">
    <div class="overlay"></div>
    <div class="background-image"></div>
    <div class="caption">
        <h1>Real News Scraper</h1>
        <p>NPR Edition</p>
    </div>
</div>

<div class="container-fluid article-container">
    {{#each articles}}
    <div data-_id="{{this._id}}" class="card">
        <div class="card-header">
            <h3>
                <a href=""{{this.link}}"" class="article-link" target="_blank" rel="noopener noreferrer">{{this.title}}</a>
                <a class="btn btn-success save">Save Article</a>
            </h3>
        </div>
    </div>
    {{/each}} {{#unless articles.length}}
    <div class="alert alert-warning text-center">
        <h4>Looks like we don't have any new articles.</h4>
    </div>
    <div class="card-header text-center">
        <h3>What Would You Like To Do?</h3>
    </div>
    <div class="card-body text-center">
        <h4>
            <a class="scrape-new">Try Scraping New Articles</a>
        </h4>
        <h4>
            <a href="/saved">Go to Saved Articles</a>
        </h4>
    </div>
    {{/unless}}

</div>

{{!-- footer --}}
<footer class="footer position-fixed">
    <div class="container text-center">
        <p>NPR Mongo Scraper</p>
    </div>
</footer>



<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
<script src="/assets/javascript/index.js"></script>